<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.hawk</groupId>
    <artifactId>mondo-hawk-plain</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <relativePath>../../pom-plain.xml</relativePath>
  </parent>

  <groupId>org.hawk</groupId>
  <artifactId>runtime-example</artifactId>
  <version>1.1.0</version>
  <packaging>jar</packaging>

  <dependencies>
    <dependency>
      <groupId>org.hawk</groupId>
      <artifactId>org.hawk.core</artifactId>
      <version>1.1.0</version>
    </dependency>
    <dependency>
      <groupId>org.hawk</groupId>
      <artifactId>org.hawk.graph</artifactId>
      <version>1.1.0</version>
    </dependency>
    <dependency>
      <groupId>org.hawk</groupId>
      <artifactId>org.hawk.emf</artifactId>
      <version>1.1.0</version>
    </dependency>
    <dependency>
      <groupId>org.hawk</groupId>
      <artifactId>org.hawk.epsilon</artifactId>
      <version>1.1.0</version>
    </dependency>
    <dependency>
      <groupId>org.hawk</groupId>
      <artifactId>org.hawk.localfolder</artifactId>
      <version>1.1.0</version>
    </dependency>
    <dependency>
      <groupId>org.hawk</groupId>
      <artifactId>org.hawk.neo4j-v2</artifactId>
      <version>1.1.0</version>
    </dependency>
    <dependency>
      <groupId>org.hawk</groupId>
      <artifactId>org.hawk.orientdb</artifactId>
      <version>1.1.0</version>
    </dependency> 
    <dependency>
      <groupId>org.hawk</groupId>
      <artifactId>org.hawk.bpmn</artifactId>
      <version>1.1.0</version>
    </dependency>
    <dependency>
      <groupId>org.hawk</groupId>
      <artifactId>org.hawk.graph.sampleListener</artifactId>
      <version>1.1.0</version>
    </dependency>
    <dependency>
      <groupId>org.hawk</groupId>
      <artifactId>org.hawk.modelio.exml</artifactId>
      <version>1.1.0</version>
    </dependency>
    <dependency>
      <groupId>org.hawk</groupId>
      <artifactId>org.hawk.svn</artifactId>
      <version>1.1.0</version>
    </dependency>
    <dependency>
      <groupId>org.hawk</groupId>
      <artifactId>org.hawk.http</artifactId>
      <version>1.1.0</version>
    </dependency>

    <dependency>
      <groupId>org.eclipse.jgit</groupId>
      <artifactId>org.eclipse.jgit</artifactId>
      <version>4.1.0.201509280440-r</version>
    </dependency>
  </dependencies>

  <build>
    <!-- We exclude the IFC/Modelio examples from compilation, since these are
         not easy to build through Maven (they require downloading many files or
         require OSGi). -->
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <excludes>
            <exclude>**/IFC*.java</exclude>
            <exclude>**/Modelio*.java</exclude>
          </excludes>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <descriptors>
            <descriptor>assembly/constellation.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <id>constellation-deps</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>        
      </plugin>
    </plugins>
  </build>
</project>
