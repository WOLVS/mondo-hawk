      <import plugin="org.hawk.core" version="1.2.0" match="greaterOrEqual"/>
      <import plugin="org.slf4j.api" version="1.7.2" match="greaterOrEqual"/>
      <import plugin="com.google.guava" version="15.0.0" match="greaterOrEqual"/>
   </requires>

   <plugin
         id="org.hawk.greycat"
         download-size="0"
         install-size="0"
         version="0.0.0"
